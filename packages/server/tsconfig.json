{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "target": "ES2022",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./dist",
    "strictNullChecks": true,
    "noUnusedLocals": true
  },
  "include": [
    "src/**/*",
    "src/types/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
  ]
}
